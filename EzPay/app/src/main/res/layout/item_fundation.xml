<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvGoldName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_red"
            android:padding="@dimen/widget_padding"
            android:text="基金名称（基金代码）"
            android:textSize="@dimen/text_size_sup_16"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/widget_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvNavRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12.54%"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/text_color_black"
                    android:textSize="32sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="涨跌额："/>
                    <TextView
                        android:id="@+id/tvNavA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2"
                        android:textColor="@color/text_color_black"
                        android:padding="@dimen/small_padding"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_padding"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_color_gray"
                    android:text="净值日期：06:59:47"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="单位净值"/>
                <TextView
                    android:id="@+id/tvPerNav"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_black"
                    android:text="1251.4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="累计净值"/>
                <TextView
                    android:id="@+id/tvTotalNav"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_black"
                    android:text="1254.0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="昨日净值"/>
                <TextView
                    android:id="@+id/tvYesNav"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_black"
                    android:text="1251.4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="申购状态"/>
                <TextView
                    android:id="@+id/tvSgStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_black"
                    android:text="1254.0"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2fc9"
            android:padding="@dimen/widget_padding">
            <TextView
                android:id="@+id/tvJJLX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:text="债券型基金"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>