<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvGoldName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_red"
            android:padding="@dimen/widget_padding"
            android:text="美黄金"
            android:textSize="@dimen/text_size_sup_16"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/widget_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvPri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1254.0"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>
                <TextView
                    android:id="@+id/tvQuanPri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2.83%"
                    android:textColor="@color/white"
                    android:padding="@dimen/small_padding"/>
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_padding"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/background"
                    android:text="最后更新：06:59:47"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/background"
                    android:text="买入"/>
                <TextView
                    android:id="@+id/tvBuyPri"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="1251.4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/background"
                    android:text="卖出"/>
                <TextView
                    android:id="@+id/tvSellPri"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="1254.0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/background"
                    android:text="最高"/>
                <TextView
                    android:id="@+id/tvMaxPri"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="1251.4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/background"
                    android:text="最低"/>
                <TextView
                    android:id="@+id/tvMinPri"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="1254.0"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22ffffff"
            android:padding="@dimen/widget_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:layout_marginLeft="@dimen/small_padding"
                android:text="昨收："/>
            <TextView
                android:id="@+id/tvPriYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="--"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:layout_marginLeft="@dimen/widget_padding"
                android:text="今开："/>
            <TextView
                android:id="@+id/tvPriOpenToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="1248.5"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>